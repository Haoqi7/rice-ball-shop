/** app.wxss **/
page {
  background-color: #F5EBDC; /* 米黄色背景 */
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, Segoe UI, Arial, Roboto, 'PingFang SC', 'miui', 'Hiragino Sans GB', 'Microsoft Yahei', sans-serif;
  color: #5D4037;
}

.container {
  padding: 20rpx;
  box-sizing: border-box;
}

/* 通用卡片样式 */
.card {
  background: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(210, 180, 140, 0.2);
}

/* 按钮基础样式 */
.btn {
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 12rpx;
  font-weight: bold;
  transition: all 0.1s;
}
.btn:active {
  transform: scale(0.98);
  opacity: 0.9;
}

.btn-primary {
  background-color: #D2B48C; /* 浅棕色 */
  color: #fff;
}

.btn-success {
  background-color: #90EE90; /* 浅绿色 */
  color: #335c33;
}

.btn-danger {
  background-color: #ff8a80;
  color: white;
}

.text-sm { font-size: 24rpx; color: #888; }
.text-lg { font-size: 32rpx; font-weight: bold; }
.text-center { text-align: center; }

/* 弹窗输入框 */
.modal-input {
  border: 2px solid #ddd;
  padding: 15rpx;
  border-radius: 16rpx;
  margin: 16rpx 0;
  width: 100%;
  height: 100rpx;
  box-sizing: border-box;
}