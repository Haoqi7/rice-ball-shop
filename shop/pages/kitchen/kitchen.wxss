.tab-header {
  display: flex;
  background: white;
  margin-bottom: 20rpx;
  border-radius: 12rpx;
  overflow: hidden;
}
.tab {
  flex: 1;
  text-align: center;
  padding: 20rpx;
  background: #eee;
  color: #666;
}
.tab.active {
  background: #D2B48C;
  color: white;
  font-weight: bold;
}

/* 通知区域样式 */
.notice-switch-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.switch-label { font-weight: bold; color: #5D4037; }
.text-xs { font-size: 22rpx; }

/* 订单卡片 */
.order-card {
  border-left: 10rpx solid #ddd;
}
.order-card.pending { border-left-color: #f9a825; }
.order-card.making { border-left-color: #2e7d32; background: #f1f8e9; }
.order-card.finished { border-left-color: #999; opacity: 0.8; }

.card-header {
  display: flex;
  justify-content: space-between;
  border-bottom: 1px solid #eee;
  padding-bottom: 10rpx;
  margin-bottom: 10rpx;
}
.order-time { font-size: 28rpx; color: #666; font-weight: bold;}
.status-badge { font-size: 24rpx; background: #f9a825; color: white; padding: 2rpx 10rpx; border-radius: 6rpx;}
.status-badge.making { background: #2e7d32; }
.status-badge.done { background: #999; }

.dish-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 6rpx;
  font-size: 32rpx;
}
.dish-count { font-weight: bold; color: #D2B48C; }

.order-remark {
  margin-top: 15rpx;
  padding: 10rpx;
  background: #fff3e0;
  color: #e65100;
  font-size: 24rpx;
  border-radius: 8rpx;
}

.action-row {
  margin-top: 20rpx;
  display: flex;
  justify-content: flex-end;
  gap: 20rpx;
}
.btn-sm { font-size: 24rpx; padding: 0 30rpx; margin: 0; }