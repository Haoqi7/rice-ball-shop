.tabs {
  display: flex;
  background: #fff;
  padding: 20rpx;
  position: sticky;
  top: 0;
  z-index: 10;
  box-shadow: 0 2rpx 5rpx rgba(0,0,0,0.05);
}

.tab-item {
  margin-right: 40rpx;
  font-size: 30rpx;
  color: #888;
  padding-bottom: 10rpx;
}

.tab-item.active {
  color: #8B4513;
  font-weight: bold;
  border-bottom: 4rpx solid #D2B48C;
}

.menu-list {
  height: calc(100vh - 100rpx);
  padding-top: 20rpx;
}

.menu-item {
  display: flex;
  min-height: 140rpx;
  align-items: center;
}

.menu-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 100%;
}

.menu-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.menu-name { font-size: 34rpx; font-weight: bold; color: #3e2723; }
.menu-desc { font-size: 26rpx; color: #888; margin-bottom: 20rpx; line-height: 1.4; }
.menu-action { display: flex; justify-content: flex-end; align-items: center; }

.price-tag { font-size: 22rpx; color: #8d6e63; background: #efebe9; padding: 4rpx 12rpx; border-radius: 8rpx; }

.stepper { display: flex; align-items: center; }
.step-btn { 
  width: 56rpx; height: 56rpx; border-radius: 50%; 
  background: #D2B48C; color: white; 
  text-align: center; line-height: 52rpx; font-size: 40rpx;
  box-shadow: 0 2rpx 5rpx rgba(0,0,0,0.2);
}
.minus { background: #fff; border: 2rpx solid #D2B48C; color: #D2B48C; line-height: 48rpx;}
.step-num { width: 70rpx; text-align: center; font-weight: bold; font-size: 32rpx;}

/* 底部区域布局 */
.bottom-area {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  z-index: 50;
  background: transparent;
  pointer-events: none; /* 让空白处点击穿透 */
  padding-bottom: 20rpx;
}

/* 购物车条 */
.cart-bar {
  pointer-events: auto;
  background: #3e2723;
  color: white;
  margin: 0 20rpx 20rpx 20rpx;
  height: 110rpx;
  border-radius: 60rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 10rpx 0 40rpx;
  box-shadow: 0 10rpx 20rpx rgba(62, 39, 35, 0.4);
}

.cart-icon-wrap { position: relative; font-size: 50rpx; margin-right: 20rpx; }
.badge { position: absolute; top: -10rpx; right: -15rpx; background: #ff5252; color: white; font-size: 20rpx; padding: 4rpx 12rpx; border-radius: 20rpx; }
.pay-btn { background: #D2B48C; height: 90rpx; line-height: 90rpx; padding: 0 60rpx; border-radius: 45rpx; color: #3e2723; font-weight: bold; font-size: 32rpx; }

/* 底部订单列表面板 */
.my-orders-panel {
  pointer-events: auto;
  background: rgba(255, 255, 255, 0.98);
  margin: 0 20rpx;
  border-radius: 24rpx;
  box-shadow: 0 -4rpx 20rpx rgba(0,0,0,0.1);
  border: 1px solid #eee;
  overflow: hidden;
  max-height: 350rpx; /* 限制高度，防止遮挡太多 */
  display: flex;
  flex-direction: column;
}

.panel-header {
  font-size: 24rpx;
  color: #999;
  padding: 15rpx 30rpx;
  background: #fcfcfc;
  border-bottom: 1px solid #eee;
}

.orders-scroll {
  max-height: 280rpx;
}

.mini-order-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  border-bottom: 1px solid #f5f5f5;
  background: #fff;
}
.mini-order-item:active {
  background: #f9f9f9;
}

.order-left { display: flex; flex-direction: column; }
.order-time { font-size: 28rpx; color: #333; font-weight: bold; }
.order-desc { font-size: 22rpx; color: #999; margin-top: 4rpx; }

.order-right { display: flex; align-items: center; }
.status-tag { font-size: 24rpx; font-weight: bold; margin-right: 10rpx; padding: 4rpx 10rpx; border-radius: 6rpx; }
.status-tag.pending { color: #f9a825; background: #fffde7; }
.status-tag.making { color: #2e7d32; background: #e8f5e9; }
.status-tag.finished { color: #999; background: #eee; }
.arrow { color: #ccc; font-size: 24rpx; }

/* 弹窗通用 */
.cart-detail-box { background: white; padding: 30rpx; padding-bottom: 150rpx;}
.cart-header { display: flex; justify-content: space-between; margin-bottom: 20rpx; font-weight: bold; }
.clear-btn { color: #999; font-size: 26rpx; }
.cart-item { display: flex; justify-content: space-between; margin-bottom: 30rpx; align-items: center; }

.modal-content { padding: 20rpx 0; }
.remark-input { width: 100%; height: 120rpx; background: #f5f5f5; padding: 10rpx; border-radius: 10rpx; margin-bottom: 20rpx; font-size: 28rpx; box-sizing: border-box;}
.pwd-input { border: 1px solid #ddd; height: 80rpx; padding: 0 20rpx; border-radius: 10rpx; }